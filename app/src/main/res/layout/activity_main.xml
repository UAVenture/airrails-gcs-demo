<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#021e3c"
    tools:context="com.uaventure.airrails.gcs.demo.notifications.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"

        android:orientation="vertical">

        <Button
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Takeoff Permission"/>

        <EditText
            android:id="@+id/planUid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="fa095321-5774-40f8-90e7-474239b44236" />

        <Button
            android:id="@+id/planUidBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Plan"/>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>